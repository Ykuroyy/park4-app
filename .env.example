# データベース設定（Railway が自動設定）
DATABASE_URL=postgresql://username:password@hostname:port/database
DATABASE_PRIVATE_URL=postgresql://username:password@hostname:port/database

# Google Cloud Vision API 設定
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_KEYFILE=path/to/service-account-key.json

# または Google Cloud認証情報（JSON文字列）
GOOGLE_APPLICATION_CREDENTIALS={"type":"service_account","project_id":"..."}

# AWS Rekognition 設定（代替案）
AWS_REGION=ap-northeast-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# アプリ設定
NODE_ENV=production
PORT=3000